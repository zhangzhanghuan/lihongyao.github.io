@charset "utf-8";
@import "../../node_modules/swiper/dist/css/swiper.min.css";
// 阿里矢量图
@font-face {
    font-family: 'iconfont';  /* project id 856764 */
    src: url('//at.alicdn.com/t/font_856764_3a12a6g5l6.eot');
    src: url('//at.alicdn.com/t/font_856764_3a12a6g5l6.eot?#iefix') format('embedded-opentype'),
    url('//at.alicdn.com/t/font_856764_3a12a6g5l6.woff') format('woff'),
    url('//at.alicdn.com/t/font_856764_3a12a6g5l6.ttf') format('truetype'),
    url('//at.alicdn.com/t/font_856764_3a12a6g5l6.svg#iconfont') format('svg');
  }
.iconfont{
    font-size: 23px;
    color: #888888;
    line-height: 35px;
}
body{
    width: 100%;
    margin: 0 auto;
    background: #F2F2F2;
}
.header{
    width: 100%;
    height: 35px;
    background:#484848 ;
    display: inline-block;
}
.header .nav{
    line-height: 35px;
    width: 1050px;
    margin: 0 auto;

}
.nav a{
    display: inline-block;
    margin-right: 22px;
    color: #aaa;
    transition: all .2s linear;
    font-size: 14px;
}
.nav a:hover{
    color: white;
}
.last{
    float:right;
}
// 隐藏图层
.box{
    width: 1386px;
    height: 280px;
    z-index: 10;
    box-shadow: 0 2px 5px rgb(207, 205, 205);
    margin-left:-1125px;
    text-align: center;
    display: none;
    position: absolute;
    background: white;
}
.box img{
    width: 1050px;
    height:260px;
    margin-top:9px;
}
// 三角形
.san{
    width: 0;
    height: 0;
    border-width: 15px;
    border-style: solid;
    border-color:  transparent transparent white transparent;
    margin-top:-25px;
    margin-left:1165px;
    position: absolute;
}
.nav-1{
    width: 100%;
    height: 83px;
    background: white;
}
.nav-box{
    width: 1050px;
    margin: 0 auto;
    height: 83px;
   
    line-height: 83px;
}
.nav-box img{
    width: 140px;
    height: 25px;
}
.one-words{
    font-size: 20px;
    padding: 15px;
}
.nav-list{
    float: right;
    margin-right:190px;
    // display: inline-block;
    width: 419px;
}
.nav-list li{
    float: left;
    padding-right: 39px;
}
.nav-list li a{
    color: #515151;
}
.nav-list li a:hover{
    color: #00c3f5;
}
// 版块下拉列表
.ban-main{
    position: relative;
}
.ban{
    width: 480px;
    height: 255px;
    background:white;
    position: absolute;
    margin-left:-240px;
    margin-top:15px;
    box-shadow:  10px 5px white,
    0 10px 5px white,
    10px 0 5px white;
    z-index: 10;
    display: none;
}
.ul-list-community li{
    height: 10px;
    // border-bottom: 1px solid gray;

}

.ul-list-community li a{
    font-size: 14px;
    padding-left: 25px;
}
.ul-list-community li a:hover{
    color: rgb(133, 125, 125)
}
.list {
    margin-top:-25px;
}
.list-1{
    margin-top: -50px;
}
.list-2{
    margin-top: -75px;
    
}
.san-1{
    width: 0;
    height: 0;
    border-width: 15px;
    border-style: solid;
    border-color:  transparent transparent white transparent;
    margin-top:-30px;
    margin-left:236px;
    position: absolute;
}

// 搜索
.search-box{
    display: inline-block;
    position: absolute;
    margin-left: 550px;
    height: 70px;
    
}
.search-box input{
    height: 30px;
    width: 200px;
    border: 1px solid #EEEEEE
}
.search-box img{
    width: 36px;
    height: 36px;
}
.button i{
    font-size: 10px;
}
.hide-img{
    width: 100px;
    height: 200px;
    background:white;
    margin-left:200px;
    display: none;
    margin-top:-50px;
}
.login-box{
    margin-top:-10px;
}
.login-box li{
    margin-bottom: -40px;
}
.login-box li a{
    font-size: 12px;
    color: #a2a2a2;
}
.login-box li a:hover{
    color: #00c3f5;
}
.hide-img img{
    width: 30px;
    height: 30px;
    margin-top:-30px;
}
// 主要内容
.content{
    width: 1060px;
    margin: 0 auto;
    margin-top:50px;
    height: 1000px;
}
// 轮播图
.swiper-container{
    width: 714px;
    height: 315px;
    background:white;
    float: left;
    border:1px solid #E6E6E6;
    bottom: 23px;
    margin-top:23px;
}

.swiper-slide img{
    width: 686px;
    height: 286px;
    padding: 15px;
}

// 发帖
.person{
    width: 716px;
    height: 530px;
   background: white;
    overflow: hidden;
    overflow-y: auto;
    border:1px solid #E6E6E6;
}
.person .person-li-1{
    width: 48%;
    float: left;
    margin-top:20px;
    height: 51px;
    padding-left: 10px;
}

.person-li-1 img{
    width: 30px;
    height: 30px;
    border-radius: 50%;
    float: left;
}
.person-li-1-img{
    width: 50px;
    height: 90px;
    padding-bottom: 20px;
}
.span-p a{
    display: inline-block;
    font-size: 14px;
    color: #333;
    overflow: hidden;
    width: 250px;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.span-p{
    margin-top:-30px;
    margin-left:50px;
}


.span-two{
    margin-top:-80px;
}
.p1{
    float: right;
    margin-top:10px;
    margin-left:10px;
}

.username{
    float: left;
    margin-right: 20px;
    font-size: 12px;
    color: #999;
    width: 75px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
// 社会发帖
.person-li{
    width: 684px;
    height: 41px;
    border-bottom: 1px solid #EEEEEE;
    padding: 10px;
}
.person-li a{
    line-height: 41px;
}
.person-li-li{
    margin-left:310px;
    
}
.person-li .person-li-li a{
    font-size: 12px;
    
}
// 阿里图标
.person-li-1 span .iconfont{
    font-size: 16px;
}
.odd{
    color: #666;
   
}
// 浏览量
.person-li-1 span{
    float: left;
}
.info-left{
    margin-right: 15px;
    font-size: 12px;
    color: #999;
    margin-top:-10px;
}
