
@charset "utf-8";
@import "../plugin/LHYAlertView.css";
body{
    width: 100%;
    // margin:0 auto;
    font-family: "Microsoft Yahei",Arial,Helvetica,sans-serif;
}

// 阿里图标
@font-face {
    font-family: 'iconfont';  /* project id 856764 */
    src: url('//at.alicdn.com/t/font_856764_8ju8kcmubg4.eot');
    src: url('//at.alicdn.com/t/font_856764_8ju8kcmubg4.eot?#iefix') format('embedded-opentype'),
    url('//at.alicdn.com/t/font_856764_8ju8kcmubg4.woff') format('woff'),
    url('//at.alicdn.com/t/font_856764_8ju8kcmubg4.ttf') format('truetype'),
    url('//at.alicdn.com/t/font_856764_8ju8kcmubg4.svg#iconfont') format('svg');
  }
  .iconfont{
      font-size: 30px;
      color: gray;
  }
.content{
    width: 100%;
    min-width: 1100px;
    overflow: hidden;
}
.login-img{
    width: 100%;
    height: 68px;
    padding: 25px 70px;
}
.login-img img{
    width: 110px;
    height: 20px;
    line-height: 68px;
}
.main{
    position: relative;
    margin-top:-45px;
    width: 100%;
    height:auto;
    background: url("https://uc-res.mzres.com/resources/uc/wlogin/member/images/banner.png") no-repeat top;
    background-size: 100%;
    overflow: hidden;
}
 main {
    background: white;
    width: 300px;
    margin: 100px 900px;
    height: 400px;
    padding: 30px 20px;
  }
main .myForm .input-box {
    width: 100%;
    height: 35px;
    margin: 25px auto;
    position: relative;
  }
 main .myForm .input-box::after {
    display: none;
    content: attr(data-msg);
    font-size: 12px;
    color: red;
    position: absolute;
    top: 100%;
    left: 0;
  }
 main .myForm .error::after {
    display: block;
  }
 main .myForm input:not(.remember) {
    width: 100%;
    height: 100%;
    border: 1px solid #2B8CC5;
    box-sizing: border-box;
    padding-left: 8px;
    -webkit-transition: border-color 0.25s linear;
    transition: border-color 0.25s linear;
    font-size: 16px;
  }
 main .myForm input:focus {
    border-color: cornflowerblue;
  }
main .myForm .info-box {
    font-size: 13px;
    margin-bottom: 25px;
  }
main .myForm .login-register-btn {
    display: block;
    width: 100%;
    height: 45px;
    text-align: center;
    line-height: 45px;
    margin: 0 auto;
    background:#2B8CC5;
    color: #fff;
    font-size: 20px;
    letter-spacing: 8px;
    cursor: pointer;
    -webkit-transition: background .25s linear;
    transition: background .25s linear;
  }
 main .myForm .login-register-btn:hover {
    background: 2B8CC5;
    opacity: .75;
  }
main .myForm a {
    color: 2B8CC5;
  }
main .myForm a:hover {
    text-decoration: underline;
  }
 main .myForm .hidden {
    display: none !important;
}

//题目
.title {
    font-size: 18px;
    text-align: center;
    width: 300px;
    height: 48px;
    color: #00a7ea;
}
.title a:hover{
    color: #298ab1;
}




 
//底部
.footer{
    width: 100%;
    height: 200px;
}
.footer .ul-list{
    height: 20px;
    width: 100%;
}
.footer .ul-list li{
    height:20px;
    margin-left:-10px;
}
.footer .ul-list li a{
    padding-right: 10px;
    color: black;
}
.footer .ul-list li .bord{
    border-right:1px solid gray;
    margin-right:-11px;

}

.li-icon .icon1:hover{
    color: red;
}
.li-icon .icon2:hover{
    color: chartreuse;
}
.li-icon .icon3:hover{
   color: orange;
}
.hide-span{
    position: relative;
}
.hide-img{
    display: none;
    position: absolute;
    width: 120px;
    height: 120px;
    margin-top:-140px;
    margin-left:-80px;
}

.wit a{
    color: white;
}
.blue{
    border-radius: 3px;
    padding: 3px;
    background: #00a7ea;
}
.last-ul{
